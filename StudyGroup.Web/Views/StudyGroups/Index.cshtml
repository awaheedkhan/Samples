@model StudyGroup.Web.Models.StudyGroupsIndex
@{
    ViewBag.Title = "Index";
    var time = 0;
}
@using (Html.BeginForm("Index", "StudyGroups", FormMethod.Post))
{
    @*@Html.ValidationSummary()*@
    @Html.AntiForgeryToken()
    <section>
        <h3 class="bg-primary">Test Results</h3>
        <table class="table-bordered table-striped text-center">
            <thead>
                <tr>
                    <th class="col-md-2">Time in mins\Marks</th>
                    <th class="col-md-2">0-20</th>
                    <th class="col-md-2">20-40</th>
                    <th class="col-md-2">40-60</th>
                    <th class="col-md-2">60-80</th>
                    <th class="col-md-2">80-100</th>
                </tr>
            </thead>
            @for (int i = 0; i < Model.TestResults.GetLength(0); i++)
            {
                <tr>
                    <td>@(time += 10)</td>
                    @for (int j = 0; j < Model.TestResults.GetLength(1); j++)
                    {
                        <td>@Model.TestResults[i, j]</td>
                    }
                </tr>
            }
        </table>
    </section>
    <br />
    <input type="submit" value="Get Study Groups" class="btn btn-lg btn-default" />
    
    <section>
        <h3 class="bg-primary">Study Groups</h3>

        @if (Model.StudyGroups != null && Model.StudyGroups.Length > 0)
        {
            <div>
                @for (int i = 0; i < Model.StudyGroups.Length; i++)
                {
                    <div>
                        <ol>
                            <div class="h4">Study Group # @(i + 1)</div>
                            @for (int j = 0; j < Model.StudyGroups[i].Length; j++)
                            {
                                <li>@Model.StudyGroups[i][j]</li>
                            }
                        </ol>
                    </div>
                    <hr />
                }

            </div>
        }
        else
        {
            <div>No Data</div>
        }
    </section>


}

